<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_btn"
        android:layout_marginLeft="@dimen/back_btn_margin_left"
        android:layout_marginTop="@dimen/back_btn_margin_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_btn"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_icon"
        android:layout_marginTop="@dimen/user_icon_margin_top"
        android:layout_marginLeft="@dimen/user_icon_margin_left"
        android:layout_marginRight="@dimen/user_icon_margin_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_marginTop="@dimen/user_name_margin_top"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/user_icon" />
</RelativeLayout>