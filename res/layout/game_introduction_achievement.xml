<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/achievement_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/linear_layout_bg"
        android:layout_marginRight="@dimen/achievement_layout_margin_right"
        android:layout_marginLeft="@dimen/achievement_layout_margin_left"
        android:paddingTop="@dimen/achievement_layout_padding_top"
        android:paddingRight="@dimen/achievement_layout_padding_right"
        android:paddingBottom="@dimen/achievement_layout_padding_bottom"
        android:paddingLeft="@dimen/achievement_layout_padding_left"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/game_image_achievement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:scaleType="fitXY"/>
            <ListView
                android:id="@+id/game_achievement_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="@dimen/game_achievement_details_margin_left"
                android:layout_marginRight="@dimen/game_achievement_details_margin_right"
                android:layout_marginTop="@dimen/game_achievement_details_margin_top"
                android:divider="#00000000"
                android:dividerHeight="@dimen/game_achievement_details_divider_height"
                android:focusable="false"
                android:clickable="false">

            </ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/star_player_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/linear_layout_grey_bg"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/star_player_layout_margin_left">
            <TextView
                android:id="@+id/star_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/star_player_title_text_size"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/star_player_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/star_player_image_margin_left"
                android:layout_marginRight="@dimen/star_player_image_margin_right"
                android:layout_marginTop="@dimen/star_player_image_margin_top"/>
            <ListView
                android:id="@+id/star_player_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/star_player_list_margin_left"
                android:layout_marginRight="@dimen/star_player_list_margin_right"
                android:layout_marginTop="@dimen/star_player_list_margin_top"
                android:divider="#00000000"
                android:dividerHeight="@dimen/star_player_list_divider_height">

            </ListView>
         </LinearLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/recommended_games"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/recommended_games_margin_right"
        android:numColumns="2"
        android:verticalSpacing="@dimen/recommended_games_vertical_spacing"
        android:horizontalSpacing='@dimen/recommended_games_horizontal_spacing'
        android:stretchMode="columnWidth"
        android:gravity="center">

    </GridView>
</LinearLayout>