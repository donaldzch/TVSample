<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_name_label_margin_bottom"
            android:id="@+id/user_name_label"
            android:layout_marginRight="@dimen/user_name_label_margin_right"
            android:textSize="@dimen/user_name_label_text_size"
            android:text="@string/user_name_label_text" />

        <EditText
            android:layout_width="@dimen/user_name_text_layout_width"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/user_name_text"
            android:layout_toRightOf="@+id/user_name_label"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_password_label"
            android:textSize="@dimen/user_password_label_text_size"
            android:text="@string/user_password_label_text"
            android:layout_marginBottom="@dimen/user_password_label_margin_bottom"
            android:layout_below="@id/user_name_label"/>

        <EditText
            android:layout_width="@dimen/user_password_text_layout_width"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/user_password_text"
            android:layout_toRightOf="@+id/user_password_label"
            android:layout_below="@id/user_name_label"
            android:layout_alignLeft="@id/user_name_text"
         />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_password_label"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="@dimen/login_btn_layout_width"
                android:layout_height="@dimen/login_btn_layout_height"
                android:text="@string/login_btn_text"
                android:id="@+id/login_btn"
                android:textSize="@dimen/login_btn_text_size"
                android:layout_marginRight="@dimen/login_btn_margin_right"
            />
            <Button
                android:layout_width="@dimen/register_btn_layout_width"
                android:layout_height="@dimen/register_btn_layout_height"
                android:text="@string/register_btn_text"
                android:id="@+id/close_btn"
                android:textSize="@dimen/register_btn_text_size"
            />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>